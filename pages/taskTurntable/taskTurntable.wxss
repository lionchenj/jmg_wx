page {
    background: #333A42;
}

.canvas-container {
    margin: 0 auto;
    margin-top: 20px;
    position: relative;
    overflow: hidden;
    width: 300px;
    height: 300px;
    border-radius: 50%;
}

.canvas-content {
    position: absolute;
    left: 0;
    top: 0;
    z-index: 10;
    display: block;
    width: 300px;
    height: 300px;
    overflow: hidden;
    border-radius: inherit;
    background-clip: padding-box;
    background-color: #ffcb3f;
}

.canvas-list {
    position: absolute;
    left: 0;
    top: 0;
    width: inherit;
    height: inherit;
    z-index: 9999;
}

.canvas-item {
    position: absolute;
    left: 0;
    top: 0;
    width: 20rem;
    height: 20rem;
    color: #e4370e;
    font-weight: bold;
    text-shadow: 0 1px 1px rgba(255,255,255,.6);
}

.canvas-item2 {
    position: absolute;
    left: 0px;
    top: 0;
    width: 300px;
    height: 150px;
    color: #e4370e;
    font-weight: bold;
    transform-origin: 150px 150px;
    transform: rotate(0deg);
    overflow: hidden;
}

.canvas-item2-after {
    position: absolute;
    top: 0;
    left: 0;
    content: "";
    width: 150px;
    height: 150px;
    transform-origin: 150px 150px;
    transform: rotate(-30deg);
}

.canvas-item3 {
    position: absolute;
    left: 0px;
    top: 0px;
    z-index: 1;
    width: 300px;
    height: 150px;
    color: #e4370e;
    font-weight: bold;
    transform-origin: 150px 150px;
    transform: rotate(60deg);
    overflow: hidden;
}

.canvas-item3:after {
    position: absolute;
    top: 0;
    left: 0;
    content: "";
    background: rgba(228,55,14,0.5);
    width: 150px;
    height: 150px;
    transform-origin: 150px 150px;
    transform: rotate(-42.428deg);
}

.canvas-item-text {
    position: relative;
    display: block;
    overflow: hidden;
    margin-left: 0;
    width: 300px;
    padding-top: 1rem;
    transform-origin: 50% 150px;
}

.canvas-item-text-f {
    position: relative;
    margin: auto;
    display: block;
    text-align: center;
    width: 3.5rem;
    font-weight: bold;
    line-height: 1.1rem;
    font-size: 20rpx;
}
.canvas-item-text-img {
    position: relative;
    margin: auto;
    display: block;
    text-align: center;
    width: 2rem;
    height: 2rem;
}

.canvas-box {
    position: absolute;
    left: 0;
    top: 0;
    width: inherit;
    height: inherit;
}

.canvas-litem3 {
    position: absolute;
    left: 150px;
    top: 150px;
    width: 150px;
    height: 150px;
    background-color: rgba(228,55,14,.5);
    transform-origin: left top;
    transform: rotate(10deg) skewX(7deg);
}

.canvas-litem {
    position: absolute;
    left: 150px;
    top: 0;
    width: 2px;
    height: 150px;
    background-color: rgba(228,55,14,.4);
    transform-origin: 50% 150px;
}

.canvas-btn {
    position: absolute;
    left: 120px;
    top: 120px;
    z-index: 400;
    width: 60px;
    height: 60px;
    border-radius: 50%;
    color: #F4E9CC;
    background-color: #E44025;
    line-height: 60px;
    text-align: center;
    font-size: 20px;
    text-shadow: 0 -1px 1px rgba(0,0,0,.6);
    box-shadow: 0 3px 5px rgba(0,0,0,.6);
    text-decoration: none;
}

.canvas-btn::after {
    position: absolute;
    display: block;
    content: ' ';
    left: 10px;
    top: -33px;
    width: 0;
    height: 0;
    overflow: hidden;
    border-width: 20px;
    border-style: solid;
    border-color: transparent;
    border-bottom-color: #E44025;
}

.canvas-btn.disabled {
    pointer-events: none;
    background: #B07A7B;
    color: #ccc;
}

.canvas-btn.disabled::after {
    border-bottom-color: #B07A7B;
}

.gb-run {
    transition: all 6s ease;
}

